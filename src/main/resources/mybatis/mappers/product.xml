<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.product">
	<resultMap id="productResult" type="productVO">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="image" column="image" />
		<result property="originalPrice" column="original_price" />
		<result property="discountedPrice" column="discounted_price" />
		<result property="createdAt" column="created_at" />
	</resultMap>

	<select id="selectSixProducts" resultMap="productResult"
		parameterType="Long">
	<![CDATA[ 
	   SELECT * FROM product
	   ORDER BY id DESC
	   LIMIT 6
	   OFFSET #{offsetValue}
	]]>
	</select>

	<select id="selectSixProductsWithBasketInfo" resultMap="productResult"
		parameterType="Long">
	<![CDATA[ 
	   SELECT
	   	  p.id,
	   	  p.name,
	   	  p.image,
	   	  p.original_price,
	   	  p.discounted_price,
	   	  p.created_at,
	   	  b.member_id = #{memberID}
	   FROM product as p
	   LEFT OUTER JOIN basket as b
	   ON p.id = b.product_id
	   ORDER BY p.id DESC
	   LIMIT 6
	   OFFSET #{offsetValue}
	]]>
	</select>

	<select id="selectOneProductByID" resultMap="productResult"
		parameterType="Long">
    <![CDATA[
       SELECT * FROM product
       WHERE id=#{id}
    ]]>
	</select>

	<select id="selectAllProducts" resultMap="productResult">
    <![CDATA[
       SELECT * FROM product
    ]]>
	</select>

</mapper>
	