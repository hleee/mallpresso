<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.product">
	<resultMap id="productResult" type="productVO">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="image" column="image" />
		<result property="originalPrice" column="original_price" />
		<result property="discountedPrice" column="discounted_price" />
		<result property="createdAt" column="created_at" />
	</resultMap>

	<select id="selectOnePostById" resultMap="postResult"
		parameterType="Long">
    <![CDATA[
      SELECT * FROM post
      WHERE id=#{id}
    ]]>
	</select>

	<insert id="insertOnePost" parameterType="postVo"
		useGeneratedKeys="true" keyProperty="id">
    <![CDATA[
      INSERT INTO post(user_id, title, content)
      VALUES(#{userId}, #{title}, #{content})
    ]]>
	</insert>

	<select id="selectAllPosts" resultMap="postResult">
    <![CDATA[
      SELECT * FROM post
      ORDER BY id DESC
    ]]>
	</select>

	<select id="selectPostsByUserId" resultMap="postResult"
		parameterType="Long">
    <![CDATA[
      SELECT * FROM post
      WHERE user_id = #{userId}
      ORDER BY id DESC
    ]]>
	</select>

	<select id="selectOnePostByUserId" resultMap="postResult"
		parameterType="Long">
    <![CDATA[
      SELECT * FROM post
      WHERE user_id = #{userId}
      ORDER BY id DESC
      LIMIT 1
    ]]>
	</select>

	<delete id="deleteOnePost" parameterType="Long">
    <![CDATA[
      DELETE FROM post
      WHERE id = #{id}
    ]]>
	</delete>

	<update id="updateOnePost" parameterType="postVo">
    <![CDATA[
      UPDATE post
      SET title = #{title}, content = #{content}
      WHERE id = #{id}
    ]]>
	</update>

</mapper>
	