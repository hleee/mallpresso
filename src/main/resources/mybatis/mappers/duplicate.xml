<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.duplicate">
	<resultMap id="duplicateResult" type="duplicateVO">
		<result property="emailCheckToken" column="token" />
		<result property="email" column="email" />
		<result property="createdAt" column="created_at" />
	</resultMap>

	<insert id="insertOneEmailCheckToken" parameterType="duplicateVO">
    <![CDATA[
      INSERT INTO duplicate(token, email)
      VALUES(#{emailCheckToken}, #{email})
    ]]>
	</insert>

	<select id="selectOneRowByEmailCheckToken" resultMap="duplicateResult"
		parameterType="duplicateVO">
    <![CDATA[
      SELECT * FROM duplicate
      WHERE token = #{emailCheckToken}
    ]]>
	</select>

</mapper>